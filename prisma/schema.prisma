generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  TRAINER
  ADMIN
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  role      Role?      @default(USER)
  name      String?
  birthDate DateTime?
  email     String?    @unique
  password  String?
  phone     String?   @unique
  address   String?
  zipCode   Int?
  DNI       String?    @unique
  avatar    String?
  workouts  Workout[]
  tests     Test[]
  Booking   Booking[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Workout {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  date        DateTime
  duration    Int
  trainer     String
  description String
  user        User     @relation(fields: [userId], references: [id])
  userId      String   @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum TestType {
  MOBILITY
  STREGTH
  RESISTANCE
}

model Test {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      TestType
  date      DateTime
  name      String
  result    Int
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Booking {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
