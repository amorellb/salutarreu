generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  TRAINER
  ADMIN
}

enum TestType {
  FMS
  // fuerza ?
  // resistencia ?
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  role      Role      @default(USER)
  name      String
  birthDate DateTime
  email     String
  phone     String
  address   String
  zipCode   Int
  DNI       String
  workouts  Workout[]
  tests     Test[]
  createdAt DateTime  @default(now())
}

model Workout {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  date        DateTime
  duration    String
  trainer     String
  description String
  user        User     @relation(fields: [userId], references: [id])
  userId      String   @db.ObjectId
  createdAt   DateTime @default(now())
}

model Test {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime
  type      TestType
  result    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
}

model Session {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  training     String
  weekSessions Int
  price        Int
  monthPrice   Int
  description  String?
}
